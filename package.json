{
  "name": "quail",
  "productName": "Quail",
  "version": "2.0.0",
  "description": "Quail app",
  "private": true,
  "license": "MIT",
  "repository": {
    "url": "https://github.com/1000ch/quail"
  },
  "author": {
    "name": "Shogo Sensui",
    "email": "shogosensui@gmail.com",
    "url": "https://github.com/1000ch"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "postversion": "git push && git push --tags",
    "test": "xo",
    "start": "electron .",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder --macos --linux --windows",
    "build": "tsc"
  },
  "dependencies": {
    "electron-config": "^2.0.0",
    "electron-context-menu": "^2.3.0",
    "electron-dl": "^3.0.2"
  },
  "devDependencies": {
    "electron": "^10.1.1",
    "electron-builder": "^22.8.1",
    "typescript": "^4.0.3",
    "xo": "^0.33.1"
  },
  "build": {
    "files": [
      "**/*",
      "!asset"
    ],
    "appId": "net.1000ch.quail",
    "mac": {
      "category": "public.app-category.productivity",
      "electronUpdaterCompatibility": ">=2.15.0",
      "darkModeSupport": true
    },
    "dmg": {
      "iconSize": 160,
      "contents": [
        {
          "x": 180,
          "y": 170
        },
        {
          "x": 480,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "snap"
      ],
      "synopsis": "Unofficial esa.io app",
      "description": "Quail is unofficial app for esa.io.",
      "category": "Productivity"
    },
    "win": {
      "verifyUpdateCodeSignature": false
    }
  },
  "xo": {
    "esnext": true,
    "space": 2,
    "envs": [
      "node",
      "browser"
    ]
  }
}
